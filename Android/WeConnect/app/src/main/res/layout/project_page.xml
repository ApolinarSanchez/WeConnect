<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/projectImage"
        style="@style/HomeImage"
        android:src="@drawable/bartender" />

    <ImageView
        android:id="@+id/category_project_background"
        android:layout_width="match_parent"
        android:layout_height="610dp"
        android:layout_below="@id/projectImage"
        android:layout_marginTop="-150dp"
        android:importantForAccessibility="no"
        app:srcCompat="@android:color/white" />

    <TextView
        android:id="@+id/projectTitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/projectImage"
        android:layout_marginTop="-130dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Project Title Goes Here"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/projectCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/projectTitle"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Category goes here"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/projectDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/projectCategory"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/bio_description"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/teamMembersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/projectDescription"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Team Members"
        android:textColor="#000000"/>

    <androidx.cardview.widget.CardView
        android:theme="@style/PrimaryButton"
        android:id="@+id/viewPositionsCard"
        android:layout_below="@id/teamMembersTitle"
        card_view:cardCornerRadius="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/viewPositionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Applications"
        android:theme="@style/PrimaryButton" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>