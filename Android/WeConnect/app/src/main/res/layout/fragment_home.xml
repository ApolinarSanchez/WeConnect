<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".homepage.HomeFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".homepage.HomeFragment">

            <ImageView
                android:id="@+id/home_image"
                style="@style/HomeImage"
                android:importantForAccessibility="no"
                android:src="@drawable/bartender" />


            <ImageView
                android:id="@+id/category_project_background"
                android:layout_width="match_parent"
                android:layout_height="610dp"
                android:layout_below="@id/home_image"
                android:layout_marginTop="-150dp"
                android:importantForAccessibility="no"
                app:srcCompat="@android:color/white" />


            <androidx.cardview.widget.CardView
                android:id="@+id/search_bar_card"
                android:layout_width="359dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@+id/home_image"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="130dp"
                card_view:cardCornerRadius="15dp">

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="359dp"
                    android:layout_height="48dp"
                    android:background="#FFFFFF"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="10dp"
                    android:hint="@string/search_bar_hint"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/first_category_card"
                style="@style/category_card"
                android:layout_below="@id/search_bar_card"
                android:layout_marginStart="36dp"
                android:layout_marginTop="-109dp"
                card_view:cardCornerRadius="4dp">

                <ImageButton
                    android:id="@+id/first_category_image"
                    style="@style/category_image"
                    android:src="@drawable/ic_android"
                    app:srcCompat="@android:color/background_dark"
                    android:importantForAccessibility="no"
                    />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/first_category"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:layout_below="@id/first_category_card"
                android:layout_alignStart="@id/first_category_card"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="@string/first_category_text"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/second_category_card"
                style="@style/category_card"
                android:layout_alignBottom="@id/first_category_card"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/first_category_card">

                <ImageButton
                    android:id="@+id/second_category_image"
                    style="@style/category_image"
                    android:importantForAccessibility="no"
                    android:src="@drawable/kotlin"
                    app:srcCompat="@android:color/background_dark" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/second_category"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:layout_below="@id/second_category_card"
                android:layout_alignStart="@id/second_category_card"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="@string/second_category_text"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/third_category_card"
                style="@style/category_card"
                android:layout_alignBottom="@id/first_category_card"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/second_category_card">

                <ImageButton
                    android:id="@+id/third_category_image"
                    style="@style/category_image"
                    android:importantForAccessibility="no"
                    android:src="@drawable/java"
                    app:srcCompat="@android:color/background_dark" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/third_category"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:layout_below="@id/third_category_card"
                android:layout_alignStart="@id/third_category_card"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="@string/third_category_text"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/fourth_category_card"
                style="@style/category_card"
                android:layout_alignBottom="@id/first_category_card"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/third_category_card">

                <ImageButton
                    android:id="@+id/fourth_category_image"
                    style="@style/category_image"
                    android:importantForAccessibility="no"
                    android:src="@drawable/database"
                    app:srcCompat="@android:color/background_dark" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/fourth_category"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:layout_below="@id/fourth_category_card"
                android:layout_alignStart="@id/fourth_category_card"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="@string/fourth_category_text"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/fifth_category_card"
                style="@style/category_card"
                android:layout_below="@+id/first_category"
                android:layout_alignStart="@id/first_category_card">

                <ImageButton
                    android:id="@+id/fifth_category_image"
                    style="@style/category_image"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_movie"
                    app:srcCompat="@android:color/background_dark"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/fifth_category"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:layout_below="@id/fifth_category_card"
                android:layout_alignStart="@id/fifth_category_card"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="@string/fifth_category_text"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/sixth_category_card"
                style="@style/category_card"
                android:layout_below="@+id/second_category"
                android:layout_alignStart="@id/second_category_card">

                <ImageButton
                    android:id="@+id/sixth_category_image"
                    style="@style/category_image"
                    android:src="@drawable/ic_music_note"
                    app:srcCompat="@android:color/background_dark"
                    android:importantForAccessibility="no"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/sixth_category"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:layout_below="@id/sixth_category_card"
                android:layout_alignStart="@id/sixth_category_card"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="@string/sixth_category_text"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/seventh_category_card"
                style="@style/category_card"
                android:layout_below="@+id/third_category"
                android:layout_alignStart="@id/third_category_card">

                <ImageButton
                    android:id="@+id/seventh_category_image"
                    style="@style/category_image"
                    android:src="@drawable/ic_cake"
                    app:srcCompat="@android:color/background_dark"
                    android:importantForAccessibility="no"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/seventh_category"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:layout_below="@id/seventh_category_card"
                android:layout_alignStart="@id/seventh_category_card"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="@string/seventh_category_text"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/eighth_category_card"
                style="@style/category_card"
                android:layout_below="@+id/fourth_category"
                android:layout_alignStart="@id/fourth_category_card">

                <ImageButton
                    android:id="@+id/eighth_category_image"
                    style="@style/category_image"
                    android:src="@drawable/ic_palette"
                    app:srcCompat="@android:color/background_dark"
                    android:importantForAccessibility="no"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/eighth_category"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:layout_below="@id/eighth_category_card"
                android:layout_alignStart="@id/eighth_category_card"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="@string/eighth_category_text" />

            <View
                android:id="@+id/category_project_divider"
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:layout_below="@+id/fifth_category"
                android:layout_alignStart="@id/fifth_category_card"
                android:layout_marginTop="19dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/projects_header"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_below="@id/category_project_divider"
                android:layout_alignStart="@id/fifth_category_card"
                android:layout_marginTop="18dp"
                android:gravity="start"
                android:text="@string/projects_header"
                android:textColor="#000000"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="341dp"
                android:layout_height="399dp"
                android:layout_below="@+id/projects_header"
                android:layout_alignStart="@id/first_category_card"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="5dp">

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</layout>