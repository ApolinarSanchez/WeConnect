<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".ProfileFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ProfileFragment">

            <androidx.cardview.widget.CardView
                android:id="@+id/pro_pic"
                style="@style/pro_pic_card"
                card_view:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/pro_pic_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pro_pic" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_below="@id/pro_pic"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:textSize="25sp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="@string/user_name" />

            <TextView
                android:id="@+id/user_position"
                android:layout_width="120dp"
                android:layout_height="24dp"
                android:background="#FFFFFF"
                android:layout_below="@id/user_name"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="@string/user_position" />

            <TextView
                android:id="@+id/bio_title"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_below="@id/user_position"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/bio_title"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/bio_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bio_title"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/bio_description"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/projects_header"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_below="@id/bio_description"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/projects_header"
                android:textColor="#000000"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="399dp"
                android:layout_below="@+id/projects_header"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp">

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</layout>